{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZenReply",
  "version": "0.1.0",
  "identifier": "top.mirawind.zenreply",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ZenReply",
        "width": 600,
        "height": 280,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
